{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "dart",
      "command": "dart",
      "args": ["run", "build_runner", "build", "--delete-conflicting-outputs"],
      "problemMatcher": ["$dart-build_runner"],
      "group": "build",
      "label": "build_runner: build"
    },
    {
      "type": "dart",
      "command": "dart",
      "args": ["run", "build_runner", "watch", "--delete-conflicting-outputs"],
      "problemMatcher": ["$dart-build_runner"],
      "group": "build",
      "label": "build_runner: watch"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["test"],
      "group": "test",
      "label": "flutter: run tests"
    },
    {
      "type": "shell",
      "command": "firebase",
      "args": ["emulators:start", "--export-on-exit=./.emulator_cache", "--import=./.emulator_cache"],
      "label": "firebase: start emulators",
    }
  ]
}
